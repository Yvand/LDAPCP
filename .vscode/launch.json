{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${file}",
                "outFiles": [
                    "${workspaceRoot}/out/**/*.js"
                ]
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Jekyll",
                "program": "bundle exec jekyll serve",
                "preLaunchTask": "tsc"
            }
        ]
    }